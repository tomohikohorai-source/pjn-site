    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Penang Japanese News</title>
    <style define:vars={{ initialColor: tabList[0].color }}>
        :root { --pjn-red: var(--initialColor); --bg-color: #f4f6f8; --theme-color: var(--initialColor); }
        body { font-family: -apple-system, sans-serif; margin: 0; background: var(--bg-color); color: #333; }
        
        header { background: var(--theme-color); color: white; padding: 1.1rem 0.5rem; text-align: center; position: sticky; top: 0; z-index: 1000; transition: background 0.5s ease; }
        header h1 { margin: 0; font-size: 1.2rem; letter-spacing: 1px; font-weight: bold; }
