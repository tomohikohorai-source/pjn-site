---
const posts = await Astro.glob('./posts/*.md');
const sortedPosts = posts
    .filter(post => post.frontmatter.title)
    .sort((a, b) => new Date(b.frontmatter.date || 0).getTime() - new Date(a.frontmatter.date || 0).getTime());

const tabList = [
    { id: "all", label: "トピック" },
    { id: "重要", label: "重要" },
    { id: "コラム", label: "コラム" },
    { id: "グルメ", label: "グルメ" },
    { id: "おでかけ", label: "おでかけ" },
    { id: "暮らし", label: "暮らし" },
    { id: "教育", label: "教育" },
    { id: "エンタメ", label: "エンタメ" },
    { id: "お得", label: "お得" }
];
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Penang Japanese News</title>
    <style>
        :root { --pjn-red: #ce1126; --bg-color: #f4f6f8; }
        body { font-family: sans-serif; margin: 0; background: var(--bg-color); }
        
        /* スマホで1行に収めるためのヘッダー調整 */
        header { 
            background: var(--pjn-red); color: white; 
            padding: 0.8rem 0.5rem; text-align: center; 
            position: sticky; top: 0; z-index: 1000; 
        }
        header h1 { margin: 0; font-size: 1.1rem; letter-spacing: 1px; }
        .site-desc { font-size: 0.7rem; margin-top: 4px; opacity: 0.9; }

        .nav-container { 
            background: #fff; position: sticky; top: 58px; z-index: 999; 
            box-shadow: 0 2px 5px rgba(0,0,0,0.1); 
            overflow-x: auto; white-space: nowrap; -webkit-overflow-scrolling: touch; 
        }
        .nav-container::-webkit-scrollbar { display: none; }
        .nav-tabs { display: inline-flex; padding: 0; margin: 0; list-style: none; }
        .tab-item { padding: 12px 15px; font-weight: bold; font-size: 0.85rem; color: #555; cursor: pointer; position: relative; }
        .tab-item.active { color: var(--pjn-red); }
        .tab-item.active::after { content: ""; position: absolute; bottom: 0; left: 10%; right: 10%; height: 3px; background: var(--pjn-red); }
        
        main { padding: 10px; max-width: 1400px; margin: auto; }
        .news-grid { display: grid; gap: 10px; grid-template-columns: 1fr; }
        @media (min-width: 768px) { .news-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; } }
        @media (min-width: 1024px) { .news-grid { grid-template-columns: repeat(3, 1fr); } }
        
        details { background: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); border: 1px solid #eee; }
        summary { padding: 15px; list-style: none; cursor: pointer; }
        .date { font-size: 0.65rem; color: #999; }
        .badge { font-size: 0.65rem; background: #f0f0f0; padding: 1px 5px; border-radius: 3px; margin-left: 5px; }
        .title { font-size: 0.95rem; font-weight: bold; margin-top: 5px; display: block; line-height: 1.4; }
        .content { padding: 0 15px 15px; border-top: 1px solid #f5f5f5; font-size: 0.9rem; line-height: 1.6; }
        .hidden { display: none; }
    </style>
</head>
<body>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
        <p class="site-desc">ペナン現地ニュースを厳選、毎日更新</p>
    </header>
    <nav class="nav-container">
        <ul class="nav-tabs">
            {tabList.map((tab, index) => (
                <li class={`tab-item ${index === 0 ? 'active' : ''}`} data-target={tab.id}>{tab.label}</li>
            ))}
        </ul>
    </nav>
    <main><div class="news-grid">
        {sortedPosts.map(post => (
            <details class="article-card" data-category={post.frontmatter.category}>
                <summary>
                    <div><span class="date">{post.frontmatter.date}</span><span class="badge">{post.frontmatter.category}</span></div>
                    <span class="title">{post.frontmatter.title}</span>
                </summary>
                <div class="content"><post.Content /></div>
            </details>
        ))}
    </div></main>
    <script>
        const tabs = document.querySelectorAll('.tab-item');
        const articles = document.querySelectorAll('.article-card');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                tab.scrollIntoView({ behavior: 'smooth', inline: 'center' });
                const target = tab.getAttribute('data-target');
                articles.forEach(a => {
                    if (target === 'all' || a.getAttribute('data-category') === target) a.classList.remove('hidden');
                    else a.classList.add('hidden');
                });
            });
        });
    </script>
</body>
</html>
