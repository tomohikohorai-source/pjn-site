                            <a href={`https://line.me/R/msg/text/?${encodeURIComponent(post.frontmatter.title + " https://penan-japanese-news.vercel.app/posts/" + post.slug)}`} target="_blank" class="share-btn btn-line">LINE</a>
                            <button onclick={`copyLink('${post.slug}')`} class="share-btn btn-copy">„É™„É≥„ÇØ„Ç≥„Éî„Éº</button>
                        </div>
                    </div>
                </details>
            ))}
        </div>
    </main>
    <button id="back-to-top" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">‚Üë</button>

    <script is:inline>
        function initTabs() {
            var tabs = document.querySelectorAll('.tab-item');
            var articles = document.querySelectorAll('.article-card');
            var newsGrid = document.getElementById('news-grid');
            var survivalSection = document.getElementById('survival-section');

            for (var i = 0; i < tabs.length; i++) {
                tabs[i].onclick = function() {
                    var color = this.getAttribute('data-color');
                    var target = this.getAttribute('data-target');
                    document.documentElement.style.setProperty('--theme-color', color);
                    for (var j = 0; j < tabs.length; j++) tabs[j].classList.remove('active');
                    this.classList.add('active');
                    this.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });

                    if (target === 'survival') {
                        newsGrid.style.display = 'none';
                        survivalSection.style.display = 'block';
                    } else {
                        newsGrid.style.display = 'grid';
                        survivalSection.style.display = 'none';
                        for (var k = 0; k < articles.length; k++) {
                            var cat = articles[k].getAttribute('data-category');
                            if (target === 'all' || cat === target) articles[k].classList.remove('hidden');
                            else articles[k].classList.add('hidden');
                        }
                    }
                };
            }
        }
        function initNewBadges() {
            var now = new Date();
            var articles = document.querySelectorAll('.article-card');
            for (var i = 0; i < articles.length; i++) {
                var pubDateStr = articles[i].getAttribute('data-date');
                if (!pubDateStr) continue;
                var pubDate = new Date(pubDateStr);
                if ((now - pubDate) / 3600000 < 24) articles[i].querySelector('.new-badge').style.display = 'inline-block';
            }
        }
        function initScrollEffects() {
            var bar = document.getElementById('reading-progress-bar');
            var btn = document.getElementById('back-to-top');
            window.onscroll = function() {
                var top = document.documentElement.scrollTop || document.body.scrollTop;
                var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                bar.style.width = (top / height * 100) + "%";
                btn.style.display = top > 300 ? "flex" : "none";
            };
        }
        function initAQI() {
            var el = document.getElementById('pjn-aqi');
            fetch('https://api.waqi.info/feed/penang/?token=demo')
                .then(res => res.json()).then(json => {
                    if (json.status === 'ok') {
                        var aqi = json.data.aqi;
                        var cls = aqi > 100 ? 'aqi-unhealthy' : (aqi > 50 ? 'aqi-moderate' : 'aqi-good');
                        el.innerHTML = '„Éö„Éä„É≥Á©∫Ê∞óÊåáÊï∞(AQI): <span class="aqi-value ' + cls + '">' + aqi + '</span>';
                    }
                });
        }
        function copyLink(slug) {
            var url = "https://penan-japanese-news.vercel.app/posts/" + slug;
            navigator.clipboard.writeText(url).then(() => alert("„É™„É≥„ÇØ„Çí„Ç≥„Éî„Éº„Åó„Åæ„Åó„ÅüÔºÅ"));
        }
        function openArticle(slug) {
            const card = document.querySelector('[data-slug="' + slug + '"]');
            if (card) {
                document.querySelectorAll('details').forEach(d => d.open = false);
                card.open = true;
                card.scrollIntoView({ behavior: 'smooth' });
            }
        }
        initTabs(); initNewBadges(); initScrollEffects(); initAQI();
    </script>
</body>
</html>
