<body>
    <div id="reading-progress-container"><div id="reading-progress-bar"></div></div>
    <header>
        <h1>PENANG JAPANESE NEWS</h1>
        <p class="site-desc">„Éö„Éä„É≥ÁèæÂú∞„Éã„É•„Éº„Çπ„ÇíÂé≥ÈÅ∏„ÄÅÊØéÊó•Êó•Êú¨Ë™û„ÅßÊõ¥Êñ∞</p>
    </header>

    <div class="info-bar"><span id="pjn-aqi">„Éö„Éä„É≥Á©∫Ê∞óÊåáÊï∞(AQI): ÂèñÂæó‰∏≠...</span></div>

    <nav class="nav-container">
        <ul class="nav-tabs">
            {tabList.map((tab) => (
                <li class={`tab-item ${tab.id === 'all' ? 'active' : ''}`} data-target={tab.id} data-color={tab.color}>{tab.label}</li>
            ))}
        </ul>
    </nav>
    <main>
        <!-- ‰æøÂà©„É™„É≥„ÇØ„Çª„ÇØ„Ç∑„Éß„É≥ÔºàÂàùÊúü„ÅØÈùûË°®Á§∫Ôºâ -->
        <section id="survival-section">
            <div class="survival-grid">
                {survivalLinks.map(link => (
                    <a href={link.url} target="_blank" class="survival-item">
                        <span class="survival-icon">{link.icon}</span>
                        <span class="survival-label">{link.label}</span>
                    </a>
                ))}
            </div>
        </section>

        <!-- „Éã„É•„Éº„Çπ„Ç∞„É™„ÉÉ„Éâ -->
        <div class="news-grid" id="news-grid">
            {processedPosts.map((post) => (
                <details class="article-card" data-category={post.frontmatter.category} data-date={post.frontmatter.date} data-slug={post.slug}>
                    <summary>
                        <div class="card-meta">
                            <span class="date">{(post.frontmatter.date || "").toString().split('-').join('/')}</span>
                            <span class="badge">{post.frontmatter.category}</span>
                            <span class="new-badge">NEW</span>
                        </div>
                        <span class="title">{post.frontmatter.title}</span>
                    </summary>
                    <div class="content">
                        <post.Content />
                        {post.isNovel && (
                            <div class="novel-nav">
                                {post.prevSlug ? <button onclick={`openArticle('${post.prevSlug}')`}>‚Üê Ââç„ÅÆË©±</button> : <span></span>}
                                {post.nextSlug ? <button onclick={`openArticle('${post.nextSlug}')`}>Ê¨°„ÅÆË©± ‚Üí</button> : <span></span>}
                            </div>
                        )}
                        <div class="share-box">
